<h2>List of all Movie reviews</h2>

<table border="1">
<tr>
    <td>Movie</td>
    <td>Director</td>
    <td>Rating (out of 10)</td>
<% if @movies.count > 0 %>
    <% @movies.each do |movie| %>
            <tr>
                <td><%= movie.title %></td>
                <td><%= movie.director %></td>
                <td><%= movie.rating %></td>
        <br/>
    <% end %>
<% else %>
        <p>No movies reviewed.</p>
<% end %>
</table>
    
    
